// VARIABLES

$margin-tiny = ($gutter/2)
$margin-small = $gutter
$margin-basic = ($gutter*3)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.4em
$font-tracking-basic = 0.005em

$font-tracking-headings = 0.01em

$gray = rgb(210,210,210)
$red = red
$blue = rgb(84,144,235)
$blueRGB = 84,144,235

// TYPOGRAPHY

html, body
  font-family:helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

h1,h2,h3,h4,h5,h6
  font-weight: bold
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-headings

.font-white
  color: white
  -webkit-font-smoothing: antialiased

.font-bold, strong, bold
  font-weight: bold

.font-italic, em, i
  font-style: italic

.font-smaller
  font-size: 0.8em

.font-mono
  font-family: monospace

.font-serif
  font-family: Georgia, serif

.font-readable
  font-size: 1.35em
  line-height: $font-leading-basic
  li
    list-style-position: inside
    list-style-type: disc
    padding-bottom: 0.5em

.font-uppercase
  text-transform: uppercase

// LINKS

a,a:active,a:visited
  color:inherit
  text-decoration: none

// BASIC

img
  max-width: 100%
  height: auto

.underline
  border-bottom: 3px solid black

.underline-white
  border-color: white

.padded-header
  margin-bottom: 0.5em
  padding-bottom: 0.25em

.divider
  margin-top: $margin-small
  margin-bottom: $margin-small

.background-black
  background-color: black

.background-gray
  background-color: $gray

.background-red
  background-color: $red

.background-blue
  background-color: $blue

// LIVE NOW

#livenow
  background-color: $red
  color: white
  letter-spacing: 3px
  -webkit-font-smoothing: antialiased
  font-weight: bold
  font-size: 17px
  text-align: center
  padding-top: 0px
  padding-bottom: 0px
  transition: all 1s
  height: 0
  overflow: hidden
  &:hover
    background-color: black


// HEADER

#header
  background-size: cover
  padding: $margin-tiny 0

#header-drawer-toggle
  padding-top: 5px

#header-top-menu
  font-size: 1.1em
  margin-left: 0.5em

.drawer
  padding: $margin-small 0
  display: none


// MAIN

#main-content
  margin-top: $margin-basic

.pagination-button
  display: inline-block
  padding: 0.2em 0.4em
  border: 1px solid black
  &:hover
    color: white
    background-color: black


// FOOTER

#footer
  padding: $margin-small 0
  margin-top: $margin-large
  li
    padding-right: 0.5em


