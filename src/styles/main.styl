    margin-top: $margin-basic

  .latest-post
    margin-top: $margin-small
    margin-bottom: $margin-small
    h3
      margin-top: $margin-tiny

@media screen and (max-width: 912px)

  $gutter = 8px
  $margin-tiny = ($gutter/2)
  $margin-small = $gutter
  $margin-basic = ($gutter*3)
  $margin-large = ($gutter*5)

  // Liveplayer

  #live
    padding-top: $margin-basic
    padding-bottom: $margin-basic

  // Latest Posts

  #latest
    margin-top: $margin-basic

  .latest-post
    margin-top: $margin-small
    margin-bottom: $margin-small
    h3
      margin-top: $margin-tiny

@media screen and (max-width: 696px)

  $gutter = 8px
  $margin-tiny = ($gutter/2)
  $margin-small = $gutter
  $margin-basic = ($gutter*3)
  $margin-large = ($gutter*5)

  .col.mobile-split-half
    width: 50%
    float: left

  // Liveplayer

  #live
    padding-top: $margin-basic
    padding-bottom: $margin-basic

  .jp-controls-holder
    margin-right: $margin-tiny

  .jp-button
    height: 4em
    width: 4em

  .jp-volume-bar
    width: 4em
    height: 4em

  .jp-volume-bar-value
    height: 4em

  // Twitter

  #twitter-novara-timeline
    display: none

  // Latest Posts

  #latest
    margin-top: $margin-basic

  .latest-post
    margin-top: $margin-small
    margin-bottom: $margin-small
    h3
      margin-top: $margin-tiny